@page "/table"
<h3 class="col-12">10x10 Multiplication Table</h3>
<div class="container mt-2">
    <div class="row">
        <div class="col-12 col-md-8">
            <table class="table table-bordered table-hover table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        @for (int i = 1; i < 11; i++)
                        {
                            <th>
                                Column @i
                            </th>
                        }
                    </tr>
                </thead>
                <tbody class="table-primary">
                    @for (int i = 1; i < 11; i++)
                    {
                        <tr>
                            @for (int j = 1; j < 11; j++)
                            {
                                this.result = i * j;
                                <td>@this.result</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-12 col-md-4">
            <img src="images/pythagoras.jpg" alt="pythagoras" class="phytagor"/>
        </div>
    </div>
</div>

@code{
    int result;
}

